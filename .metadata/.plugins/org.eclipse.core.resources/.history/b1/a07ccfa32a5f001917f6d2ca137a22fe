<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.caoxx123.pojo">
	<select id="addCategory" parameterType="Category">
		insert into category_ (name) values(#{name})
	</select>
	<select id="deleteCategory" parameterType="Category">
		delete from category_ where id=#{id}
	</select>
	<select id="updateCategory" parameterType="Category">
		update category_ set name=#{name} where id=#{id}
	</select>
	<select id="getCategory" parameterType="_int" resultType="Category">
		select * from category_ where id=#{id}
	</select>
	<select id="listCategory" resultType="Category">
		select * from category_
	</select>
	<select id="getCategory" parameterType="string" resultType="Category">
		select * from category_ where name like concat('%',#{0},'%')
	</select>
</mapper>